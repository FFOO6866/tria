# Production Environment Template
# Copy this to .env on the server and fill in the values

# Environment
ENVIRONMENT=production

# Database (Docker service - DO NOT use localhost)
DATABASE_URL=postgresql://tria_user:tria_password@postgres:5432/tria_bpo

# Redis (Docker service - DO NOT use localhost)
REDIS_HOST=redis
REDIS_PORT=6379

# OpenAI API Key (MUST match local .env)
OPENAI_API_KEY=your-openai-api-key-here

# Application Secret Key (MUST match local .env)
SECRET_KEY=your-secret-key-here

# Tax Rate (MUST match local .env)
TAX_RATE=0.08

# Xero Integration (MUST match local .env except REDIRECT_URI)
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://13.214.14.130:8003/api/xero/callback
XERO_SALES_ACCOUNT_CODE=200
XERO_TENANT_ID=your-tenant-id

# ChromaDB Settings
CHROMA_HOST=localhost
CHROMA_PORT=8000

# API Settings
API_HOST=0.0.0.0
API_PORT=8003
